# Example environment configuration for OpenAlex MCP Server

# Your email address (recommended for polite pool access and higher rate limits)
OPENALEX_EMAIL=your.email@example.com

# Request timeout in seconds (default: 30.0)
OPENALEX_TIMEOUT=30.0

# Maximum concurrent requests (default: 10)
OPENALEX_MAX_CONCURRENT=10

# Default page size for results (default: 25)
OPENALEX_DEFAULT_PAGE_SIZE=25

# Maximum page size for results (default: 200)
OPENALEX_MAX_PAGE_SIZE=200

# Daily request limit (default: 100000)
OPENALEX_DAILY_LIMIT=100000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log API requests for debugging (true/false)
LOG_API_REQUESTS=false